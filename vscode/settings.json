{
  //activity bar
  "workbench.sideBar.location": "right",
  "workbench.iconTheme": "material-icon-theme",
  "editor.fontFamily": "'0xProto Nerd Font Mono', Fira Code,Operator Mono, Fira Code, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontFamily": "'JetBrains Mono', '0xProto Nerd Font', 'Fira Code', 'Inconsolata for Powerline', monospace",
  "editor.fontSize": 15.5,
  "editor.lineHeight": 20.4,
  "editor.letterSpacing": 0.2,
  "editor.fontWeight": "449",
  "files.insertFinalNewline": false,
  "editor.fontLigatures": false,
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 2,
  "editor.cursorBlinking": "smooth",
  "editor.stickyScroll.enabled": true,
  "editor.insertSpaces": true,
  "editor.snippetSuggestions": "bottom",
  "editor.tabSize": 3,
  "workbench.startupEditor": "none",
  "editor.glyphMargin": true,
  "workbench.editor.enablePreview": false,
  "explorer.confirmDragAndDrop": false,
  "breadcrumbs.enabled": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "explorer.openEditors.visible": 2,
  // Formatting Optional.
  "editor.formatOnSave": true,
  //eslint and tslint
  "prettier.printWidth": 100,
  "eslint.run": "onType",
  "eslint.autoFixOnSave": true,
  "eslint.enable": true,
  "tslint.alwaysShowStatus": true,
  "tslint.enable": true,
  "tslint.autoFixOnSave": true,
  "tslint.run": "onType",
  "tslint.alwaysShowRuleFailuresAsWarnings": true,
  //Markdown settings
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
    "editor.formatOnSave": false
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  // SOP's Import Cost Extension Settings.
  "importCost.largePackageColor": "#EC3A37F5",
  "importCost.mediumPackageColor": "#B362FF",
  "importCost.smallPackageColor": "#B362FF",
  "workbench.panel.defaultLocation": "bottom",
  "workbench.settings.editor": "ui",
  "editor.minimap.enabled": false,
  "window.zoomLevel": 0.37,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorCustomizations": {},
  "terminal.integrated.rendererType": "dom",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  // "editor.folding": true,
  "editor.matchBrackets": "always",
  "disable-hardware-acceleration": false,
  "editor.semanticHighlighting.enabled": true,
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.renderFinalNewline": "off",
  "editor.quickSuggestionsDelay": 0,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.parameterHints.enabled": true,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.guides.indentation": true,
  "editor.mouseWheelZoom": true,
  "terminal.integrated.mouseWheelZoom": true,
  "terminal.integrated.fontSize": 15,
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "extensions.ignoreRecommendations": true,
  "editor.renderLineHighlight": "none",
  "update.mode": "none",
  "workbench.enableExperiments": false,
  "security.workspace.trust.enabled": false,
  "terminal.integrated.defaultProfile.linux": "bash",
  "files.autoSave": "off",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "chat.agent.enabled": false,
  "chat.commandCenter.enabled": false,
  "telemetry.feedback.enabled": false
}
